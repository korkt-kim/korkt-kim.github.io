{
  "extends": "typescript-config/react-library.json",
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "outDir": "dist",
    "isolatedModules": false,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "build", "node_modules"]
}
