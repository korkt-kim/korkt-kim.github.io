{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "sanity-dev": { "cache": false, "persistent": true },
    "sanity-build": { "cache": true },
    "sanity-start": { "cache": false, "persistent": true }
  }
}
