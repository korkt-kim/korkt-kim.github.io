{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "docker:dev": { "cache": false },
    "docker:stage": { "cache": false },
    "docker:prod": { "cache": false }
  }
}
